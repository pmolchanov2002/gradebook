{# app/Resources/views/year.html.twig #}
{% extends 'base-admin.html.twig' %}

{% block pageTitle %}Day in year of study{% endblock %}
{% block title %}Day in year of study{% endblock %}
{% block script %}
	$(document).ready(function() {
	    $('#results').DataTable({
	    	paging: false
	    });
	    $('.delete_row').click(function(){
    		return confirm("Are you sure you want to delete?");
		});
	} );
{% endblock %}

{% block body %}
    <div style="margin-bottom:10px;">
    	<a class="btn btn-default" href="/admin/day/create" role="button">New day</a>
	</div>
	<table id="results" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
	    {% for day in days %}
	    	<tr>
	    		<td data-sort='{{ day.date|date("m/d/Y") }}'>{{ day.date|date("m/d/Y") }}</td>
	        	<td>{{ day.name }}</td>
	        	<td width="10"><a href='/admin/day/edit/{{ day.id }}'>Edit</a></td>
	        	<td class="delete_row" width="10"><a href='/admin/day/delete/{{ day.id }}'>Delete</a></td>
	        </tr>
	    {% endfor %}
    	</tbody>        
    </table>
{% endblock %}
