{# app/Resources/views/teacher/class.html.twig #}
{% extends 'base-teacher.html.twig' %}

{% block title %}Class{% endblock %}

{% block body %}
<div class="container">
  <p>Select class:</p>
  {%for class in classes %}
  <div class="row">
      <div class="col-md-10">
        <p><a class="btn btn-primary btn-lg" href="/teacher/homework/class/{{class.id}}" role="button">{{ class.name }} &raquo;</a></p>
      </div>
  </div>
  {% endfor %}
</div>
{% endblock %} 