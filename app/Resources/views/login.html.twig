{# app/Resources/views/login.html.twig #} {% extends
'base-entrypoint.html.twig' %} {% block body %}

{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-signin" action="{{ path('login_check') }}"
	method="post">
	<label for="username">Username:</label> <input style="width: 300px"
		type="text" id="username" name="_username" value="{{ last_username }}"
		class="form-control" placeholder="Username" required autofocus /> <label
		for="password">Password:</label> <input style="width: 300px"
		type="password" id="password" name="_password" class="form-control"
		placeholder="Password" required /> {# If you want to control the URL
	the user is redirected to on success (more details below) <input
		type="hidden" name="_target_path" value="/account" /> #}


	<button style="width: 300px; margin-top: 20px;"
		class="btn btn-primary btn-block" type="submit">Sign in</button>
</form>

{% endblock %}
