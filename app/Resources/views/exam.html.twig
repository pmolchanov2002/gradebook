{# app/Resources/views/course.html.twig #}
{% extends 'base-admin.html.twig' %}

{% block pageTitle %}Exams{% endblock %}
{% block title %}Exams{% endblock %}
{% block script %}
	$(document).ready(function() {
	    $('#results').DataTable({
	    	paging: false
	    });
	    $('.delete_row').click(function(){
    		return confirm("Are you sure you want to delete?");
		});
	} );
{% endblock %}

{% block body %}
    <div style="margin-bottom:10px;">
    	<a class="btn btn-default" href="/admin/exam/create" role="button">New exam</a>
	</div>
	<table id="results" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
	    {% for exam in exams %}
	    	<tr>
	        	<td data-sort="{{ exam.ordinal }}">{{ exam.name }}</td>
	        	<td width="10"><a href='/admin/exam/edit/{{ exam.id }}'>Edit</a></td>
	        	<td class="delete_row" width="10"><a href='/admin/exam/delete/{{ exam.id }}'>Delete</a></td>
	        </tr>
	    {% endfor %}
    	</tbody>        
    </table>
{% endblock %}
