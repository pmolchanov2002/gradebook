{% block markdown_widget %}
    {% spaceless %}
        <div class="markdown">
            <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
            {% if show_help %}
            <p class="muted">Need help writing Markdown? <a href="http://daringfireball.net/projects/markdown/syntax" target="_blank">Daring Fireball has a list of available syntax.</a></p>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock markdown_widget %}
